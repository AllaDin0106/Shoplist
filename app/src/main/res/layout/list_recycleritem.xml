<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_listContainer"
    android:layout_width="match_parent"
    android:background="@drawable/white_bg_rounded"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:orientation="horizontal">d

        <ImageView
            android:id="@+id/main_listImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:src="@drawable/receipt_long_black_24dp" />

        <TextView
            android:id="@+id/main_listTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placeholder" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>